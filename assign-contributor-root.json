{
  "$schema": "https://schema.management.azure.com/schemas/2019-08-01/managementGroupDeploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "principalId": {
      "type": "string",
      "metadata": {
        "description": "ObjectId van de service principal (Enterprise application) van jullie app in deze tenant."
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "westeurope",
      "metadata": {
        "description": "Location for the deployment metadata"
      }
    },
    "roleAssignmentName": {
      "type": "string",
      "defaultValue": "[guid(managementGroup().id, parameters('principalId'), 'b24988ac-6180-42a0-ab88-20f7382dd24c')]",
      "metadata": {
        "description": "Unique name for the role assignment"
      }
    }
  },
  "variables": {
    "contributorRoleGuid": "b24988ac-6180-42a0-ab88-20f7382dd24c",
    "roleDefinitionResourceId": "[managementGroupResourceId('Microsoft.Authorization/roleDefinitions', variables('contributorRoleGuid'))]"
  },
  "resources": [
    {
      "type": "Microsoft.Authorization/roleAssignments",
      "apiVersion": "2017-09-01",
      "name": "[parameters('roleAssignmentName')]",
      "properties": {
        "roleDefinitionId": "[variables('roleDefinitionResourceId')]",
        "principalId": "[parameters('principalId')]",
        "principalType": "ServicePrincipal"
      }
    }
  ]
}
